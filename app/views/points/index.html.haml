%h1 Listing points

%table
  %thead
    %tr
      %th Coordinates
      %th Address
    
  %tbody
    - @points.each do |point|
      %tr
        %td
          = link_to 'Show', point
          = link_to 'Edit', edit_point_path(point)
          = link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' }
        %td= point.coordinates
        %td= point.address
%br

= link_to 'New Point', new_point_path

%h2 Map
%div{style:'width: 800px;'}
  %div{id:'map_container',style:'width: 800px; height: 400px;'}

%script{src:'//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry'}
%script{src:'//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'}

:coffee
  jQuery ->
    init_map('map_container', #{raw @map_options}, #{raw @markers})
